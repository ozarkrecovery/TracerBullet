@model OzarkRecovery.Web.Models.CounselorIndexModel

@{
    ViewBag.Title = "All Counselors";
}

<h1>All Counselors</h1>

<ul class="person-list">
@foreach (var counselor in Model.Counselors) {
    <li>
        <div class="person-list-title">@(Html.ActionLink<CounselorController>(c => c.Show(counselor.Id), counselor.Name))</div>
        <div class="person-list-meta">@counselor.ActiveClients active clients</div>
    </li>
}
</ul>

@if (Model.IsAdmin) {
    <p>@(Html.ActionLink<CounselorController>(c => c.Add(), "Add New Counselor"))</p>
}
