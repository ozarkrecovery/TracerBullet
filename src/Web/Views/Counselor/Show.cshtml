@model  OzarkRecovery.Web.Models.CounselorShowModel

@{
    ViewBag.Title = Model.CounselorName;
}

<h1>@Model.CounselorName</h1>

<h3>Assigned Clients</h3>

<ul class="person-list">
@foreach (var client in Model.AssignedClients) {
    <li>
        <div class="person-list-title">@(Html.ActionLink<TreatmentController>(c => c.Show(client.Id, client.TreatmentNumber), client.Name))</div>
        <div class="person-list-meta">Current Step: @client.CurrentStep</div>
    </li>
}
</ul>
