@model OzarkRecovery.Web.Models.CounselorAddModel

@{
    ViewBag.Title = "Add Counselor";
}

<h1>Add Counselor</h1>

@using (Html.BeginForm()) {

    <div class="editor-label">@Html.LabelFor(x => x.FirstName)</div>
    <div class="editor-field">@Html.EditorFor(x => x.FirstName)</div>

    <div class="editor-label">@Html.LabelFor(x => x.LastName)</div>
    <div class="editor-field">@Html.EditorFor(x => x.LastName)</div>

    <div class="editor-label">@Html.LabelFor(x => x.Username)</div>
    <div class="editor-field">@Html.EditorFor(x => x.Username)</div>

    <div class="editor-label">@Html.LabelFor(x => x.Password)</div>
    <div class="editor-field">@Html.PasswordFor(x => x.Password)</div>

    <div class="editor-label">@Html.LabelFor(x => x.ConfirmPassword)</div>
    <div class="editor-field">@Html.PasswordFor(x => x.ConfirmPassword)</div>

    <div class="editor-field">
        @Html.CheckBoxFor(x => x.IsAdmin)
        @Html.LabelFor(x => x.IsAdmin)
    </div>

    @Html.ValidationSummary()

    <p>
        @Html.SubmitButton("submit", "Add")
    </p>
}
